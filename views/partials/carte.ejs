<div class="container-fluid d-none d-lg-block d-xl-none">
    <div class="card-content">

        <h2 class="text-center voyageTitre">Notre sélection du moment</h2>
   
        <div class="row carteVoyage">
            <% mesVoyages.forEach((voyages)=>{ %>
                <div class="col-md-4">
                    <div class="carte">
                        <img src="images/<%= voyages.img %>" class="img-responsive" alt="">
                        <div class="ville">
                            <h1>
                                <%= voyages.name %>
                            </h1>
                        </div>
                        <div class="date">
                           
                            <h3>Voyage de
                                <%= voyages.sejour %> !</h3>
                            <p>
                                <%= voyages.dateA %> au
                                    <%= voyages.dateR %>
                            </p>
                            <i class="fa fa-calendar fa-2x"></i>
                        </div>
                        <div class="details">
                            <p>
                                <%= voyages.preview %>
                            </p>
                        </div>
                        <div class="row">
                            <div class="col-md-6">

                                <button class="btn btn-details  text-center">
                                    <a href="voyage/<%= voyages.id %>">Détails</a>
                                </button>
                            </div>
                            <div class="col-md-6">
                                <button class="btn btn-warning text-center">
                                    <a href="/contact">Contactez-nous</a>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>




                <%  }); %>
        </div>
    </div>
</div>