<head>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<div class="container-fluid">
    <div class="row content">
        <div class="col-sm-3 sidenav">
            <h4 class="text-center">Admin</h4>
            <ul class="nav nav-pills nav-stacked">
                <li class="active"><a class="text-center" href="/dashbord/">Home</a></li>
                <li><a class="text-center" href="/dashbord/card">Card</a></li>
                <li><a class="text-center" href="/dashbord/dashItineraire">Itin√©raires</a></li>
            </ul><br>
        </div>

        <div class="col-sm-9">
            <h4 class="text-center"><small>Dashbord</small></h4>
            <hr>
            <h4 class="text-center">Contenu des Cartes</h4>
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <div class="carte">
                        <form action="/dashbord/card" method="post">
                            <div class="imgVide">
                                <input type="file" name="img" class='btn btn-primary' placeholder="">
                            </div>
                            <div class="ville">
                                <div class="form-group">
                                    <label>Titre</label>
                                    <input type="text" class="form-control" name="name" placeholder="Pays a visiter">
                                </div>
                            </div>
                            <div class="row">

                                <div class="form-group col-md-6">
                                    <label>date aller</label>
                                    <input type="text" class="form-control" name="dateA" placeholder="ex: 12 janvier 2018">
                                </div>

                                <div class="form-group col-md-6">
                                    <label>date retour</label>
                                    <input type="text" class="form-control" name="dateR" placeholder="ex: 30 janvier 2018">
                                </div>

                            </div>

                            <div class="form-group">
                                <label>nombre de jour</label>
                                <input type="text" class="form-control" name="sejour" placeholder="ex: 23 jours">
                            </div>

                            <div class="form-group">
                                <label for="descriptif">descriptif de la carte</label>
                                <textarea class="form-control" rows="5" name="preview" id="comment" placeholder="leger desciptif. 140 caract max"></textarea>
                            </div>
                            <button type="submit" class="btn btn-warning btn-lg">Confirmer</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4"></div>
        

        <h1>Supprimer ou modifier une carte</h1>
        <div class="row">
            <% cartes.forEach((carte)=>{ %>

                <div class="col-md-4">
                    <div class="carte">
                        <img src="../../images/<%= carte.img %>" alt="">
                        <div class="ville">
                            <h1>
                                <%= carte.name %>
                            </h1>
                        </div>
                        <div class="date">
                            <h3>Voyage de
                                <%= carte.sejour %> !</h3>
                            <p>
                                <%= carte.dateA %> au
                                    <%= carte.dateR %>
                            </p>
                        </div>
                        <div class="details">
                            <p>
                                <%= carte.preview %>
                            </p>
                        </div>
                        <div class="row">
                            <a class="btn btn-danger btn-lg" href="/cardSupp/<%= carte._id %>">Supprimer</a>
                            <a class="btn btn-warning btn-lg" href="/updatecard/<%=carte.id%>">Modifier</a>
                        </div>


                    </div>
                </div>
                <% })%>
        </div>



