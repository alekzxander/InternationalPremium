<head>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<div class="row">
    <div class="col-sm-9">
        <h4 class="text-center">
            <small>Dashbord</small>
        </h4>
        <hr>
        <h4 class="text-center">Contenu des Cartes</h4>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="carte">
                    <form action="/updatecard/<%= card._id%>" method="POST">
                        <div class="imgVide">
                            <input type="file" name="img" class='btn btn-primary' value="<%= card.img %>">
                        </div>
                        <div class="ville">
                            <div class="form-group">
                                <label>Titre</label>
                                <input type="put" class="form-control" name="name" value="<%= card.name %>">
                            </div>
                        </div>
                        <div class="row">

                            <div class="form-group col-md-6">
                                <label>Date Aller</label>
                                <input type="text" class="form-control" name="dateA" value="<%= card.dateA%>">
                            </div>

                            <div class="form-group col-md-6">
                                <label>Date Retour</label>
                                <input type="text" class="form-control" name="dateR" value="<%= card.dateR%>">
                            </div>

                        </div>

                        <div class="form-group">
                            <label>Nombres de Jours</label>
                            <input type="text" class="form-control" name="sejour" value="<%= card.sejour%>">
                        </div>

                        <div class="form-group">
                            <label for="descriptif">Descriptif de la Carte</label>
                            <textarea class="form-control" rows="5" maxlength="140" name="preview" id="comment" value="<%= card.preview%>"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="descriptif">Resum√© du voyage</label>
                            <textarea class="form-control" rows="5" name="text" id="comment" value="<%= card.preview%>"></textarea>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg" >Confirmer</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>

</div>